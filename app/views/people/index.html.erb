<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Name</th>
      <th>Company name</th>
      <th>Ie</th>
      <th>Cnpj</th>
      <th>Rg</th>
      <th>Cpf</th>
      <th>Tel1</th>
      <th>Tel2</th>
      <th>Email</th>
      <th>Address</th>
      <th>Address number</th>
      <th>Address complement</th>
      <th>Address bairro</th>
      <th>Address zip</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.kind %></td>
        <td><%= person.name %></td>
        <td><%= person.company_name %></td>
        <td><%= person.ie %></td>
        <td><%= person.cnpj %></td>
        <td><%= person.rg %></td>
        <td><%= person.cpf %></td>
        <td><%= person.tel1 %></td>
        <td><%= person.tel2 %></td>
        <td><%= person.email %></td>
        <td><%= person.address %></td>
        <td><%= person.address_number %></td>
        <td><%= person.address_complement %></td>
        <td><%= person.address_bairro %></td>
        <td><%= person.address_zip %></td>
        <td><%= person.status %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

