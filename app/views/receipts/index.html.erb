<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Receipt date</th>
      <th>Total value</th>
      <th>Discount value</th>
      <th>Paid value</th>
      <th>Remaining value</th>
      <th>Payment type</th>
      <th>Parcel value</th>
      <th>Parcel qtd</th>
      <th>Maintenances</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.receipt_date %></td>
        <td><%= receipt.total_value %></td>
        <td><%= receipt.discount_value %></td>
        <td><%= receipt.paid_value %></td>
        <td><%= receipt.remaining_value %></td>
        <td><%= receipt.payment_type %></td>
        <td><%= receipt.parcel_value %></td>
        <td><%= receipt.parcel_qtd %></td>
        <td><%= receipt.maintenances %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
